<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.HotelManagement.dao.hotelType.HotelTypeMapper">
    <insert id="addNewHotelType" parameterType="HotelType">
insert into hotelType(hotelId,hotelRoomType,hotelRoomNumber,hotelPrice,hotelPeople,creationDate,modifyDate)
values (#{hotelId},#{hotelRoomType},#{hotelRoomNumber},#{hotelPrice},#{hotelPeople},#{creationDate},#{modifyDate})
    </insert>

    <delete id="deleteHotelType" parameterType="int">
        delete * from hotelType where id = #{id}
    </delete>

    <select id="selectHotelTypeByIdType" resultType="com.HotelManagement.pojo.HotelType">
select * from hotelType
    <where>
        and hotelRoomType LIKE CONCAT('%',#{hotelRoomType},'%')
    </where>
        and hotelId = #{hotelId}
    </select>
    <select id="selectRemainNumber" resultType="java.lang.Integer">
        select h.hotelRoomNumber- (select count(*) from bill b where b.hotelId = #{billHotelId} and b.roomType = #{roomType}) from hotelType h,bill b
        where h.hotelId = #{hotelId} and h.id = #{hotelTypeId} LIMIT 1;
    </select>

    <!--顾客退房-->
    <update id="modify1" parameterType="hotelType">
        update  hotelType
        <set>
            <if test="hotelId!=null and hotelId!=''">hotelId=#{hotelId},</if>
            <if test="hoteRoomType!=null and hoteRoomType!=''">hoteRoomType=#{hoteRoomType},</if>
            <if test="hotelRoomNumber!=null and hotelRoomNumber!=''">hotelRoomNumber=#{hotelRoomNumber+1},</if>
            <if test="hotelPrice!=null and hotelPrice!=''">gender=#{hotelPrice},</if>
            <if test=" hotelPeople!=null and  hotelPeople!=''">hotelPeople=#{ hotelPeople},</if>
            <if test="modifyDate!=null and modifyDate!=''">phone=#{modifyDate},</if>

        </set>
        where id=#{id}
    </update>

    <!--顾客订房-->
    <update id="modify2" parameterType="hotelType">
        update  hotelType
        <set>
            <if test="hotelId!=null and hotelId!=''">hotelId=#{hotelId},</if>
            <if test="hoteRoomType!=null and hoteRoomType!=''">hoteRoomType=#{hoteRoomType},</if>
            <if test="hotelRoomNumber!=null and hotelRoomNumber!=''">hotelRoomNumber=#{hotelRoomNumber-1},</if>
            <if test="hotelPrice!=null and hotelPrice!=''">gender=#{hotelPrice},</if>
            <if test=" hotelPeople!=null and  hotelPeople!=''">hotelPeople=#{ hotelPeople},</if>
            <if test="modifyDate!=null and modifyDate!=''">phone=#{modifyDate},</if>

        </set>
        where id=#{id}
    </update>
</mapper>